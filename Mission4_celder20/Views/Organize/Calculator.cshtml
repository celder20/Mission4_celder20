@model CalculatorModel;

<nav>
    <a asp-controller="Organize" asp-action="Index">Home</a>
    <a asp-controller="Organize" asp-action="Calculator">Calculate Grade</a>
</nav>

<!--User inputs their percentages for each of the grade categories, and then their grade is calculated in javascript function-->
<h4>&nbspCALCULATE YOUR GRADE BELOW!</h4>
<p>&nbspInput your percentage score for each of the following grade categories:</p>
<form method="post">
    <label>&nbspAssignments&nbsp</label>
    <input id="assmt" asp-for="Assignments" /><br />
    <label>&nbspGroup Projects&nbsp</label>
    <input id="group" asp-for="Project" /><br />
    <label>&nbspQuizzes&nbsp</label>
    <input id="quiz" asp-for="Quiz" /><br />
    <label>&nbspMidterm Exam&nbsp</label>
    <input id="midterm" asp-for="Midterm" /><br />
    <label>&nbspFinal Exam&nbsp</label>
    <input id="final" asp-for="Final" /><br />
    <label>&nbspINTEX&nbsp</label>
    <input id="intex" asp-for="Intex" /><br /><br />
    <input id="btnSubmit" type="submit" value="Submit All" /><br /><br />

    <div asp-validation-summary="All"></div>

</form>

<!--Jquery file-->
<script src="~/lib/jquery/jquery-3.6.3.min.js"></script>

<!--Javascript File for the forms-->
<script src="~/js/JavaFile.js"></script>

<!--Grab the javascript function output-->
<h3 id="totalGradeOutput"></h3>